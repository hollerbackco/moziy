!!!
%html
  %head
    %title= title
    %link{ :rel => "shortcut icon", :href => "/assets/fallback/thumb_favicon_default.jpg", :type => "image/x-icon"}
    = render "layouts/meta"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render "layouts/analytics"

  %body#flipside{:class => body_id}
    = render "layouts/facebook"
    #stage
      .container
        %header.clearfix
          %h1= link_to "mosey", manage_channel_path(current_user.primary_channel)
          %nav.session
            %ul
              - if logged_in?
                %li.stream-selector.clearfix
                  %i.header-more
                  = link_to manage_settings_path, class: "stream-name" do
                    = "/more"
                  %ul#menu-options.sidebar-menu{style: "display: none"}
                    %li.menu-item
                      = link_to manage_likes_path do
                        %i.like
                        = "Liked #{current_user.likes.count} Videos"
                    %li.menu-item= link_to "Create a New Stream", new_manage_channel_path
                %li
                  = link_to manage_settings_path do
                    -#Settings
                    %i.header-settings
                %li
                  = link_to logout_path do
                    -#Log out
                    %i.header-logout
              - else
                %li= link_to 'Log in', login_path
                %li= link_to 'Join', root_path
        %section#main
          %section#sidebar
            - if content_for? :sidebar
              = content_for :sidebar
          %section#main-content
            = yield
