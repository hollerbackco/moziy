#video-manage
  #viewer
    .holder{:style => "margin: 0 auto"}= sanitize @video.body, :tags => %w(embed iframe p), :attributes => %w(src width height frameborder)
  #main-content
    = render :partial => 'manage/channels/channel_menu'
    = form_for ['manage', @channel, @video] do |f|
      .field
        = f.label :title
        %br
        = f.text_field :title
      .field
        = f.label :description
        %br
        = f.text_area :description
      .actions
        = f.submit
:javascript
  $("iframe").attr("width", "100%").attr("height", "100%")