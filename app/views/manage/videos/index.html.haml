- content_for :sidebar do
  = render :partial => 'manage/channels/channel_menu'
#video-manage
  %header.channel-header.clearfix
    #cover-art.clearfix
      = image_tag @channel.cover_art_url(:thumb_player),
        class: "cover-art",
        width: 120,
        height: 120

      - unless @channel.cover_art.present?
        = link_to "add image", edit_manage_channel_path(@channel), class: "add-image-alert alert"
    .name
      = link_to manage_channel_path(@channel), class: "home" do
        = "/#{@channel.slug}"
    .address
      = link_to slug_url(@channel.slug), class: "slug" do
        = slug_url(@channel.slug)
  = render :partial => 'manage/videos/form'
  - if @channel.airings.any?
    %ul.videos.items
      = render partial: 'manage/videos/video', collection: @channel.airings, as: :a
  - else
    %h1.empty
      Add cool videos to this stream to
      %br
      share them with your friends and followers.
:javascript
  $(".videos").sortable({items: ".video", axis: "y", cursor: "move",
    update: function() {
      $.post("/me/streams/#{@channel.slug}/videos/sort", "_method=put&"+ $(this).sortable("serialize"))
    }})
