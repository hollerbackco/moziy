#video-manage
  #main-content.video-list.list
    = render :partial => 'manage/channels/channel_menu'
    = render :partial => 'manage/videos/form'
    %ul.videos
      - @channel.airings.each do |a|
        %li.video{:id => "video_#{a.video_id.to_s}", class: a.state}
          .title= link_to a.video.title, edit_manage_channel_video_path(@channel, a.video)
          .actions
            = button_to (a.archived? ? "recover" : "delete"),
              archive_manage_channel_airing_path(@channel, a), :method => :put

            / = link_to manage_channel_airing_path(@channel, a), :method => :delete, :confirm => "Are you sure you want to delete #{a.video.title}?" do
            /   .action.trash
:javascript
  $(".videos").sortable({items: ".video", axis: "y", cursor: "move", 
    update: function() {
      $.post("/manage/channels/#{@channel.id}/videos/sort", "_method=put&"+ $(this).sortable("serialize"))
    }})
