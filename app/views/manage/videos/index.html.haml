#channel-list
  %ul#secondary-menu.clearfix
    %li= link_to 'add videos', new_manage_channel_video_path(@channel)
    %li= link_to 'settings', edit_manage_channel_path(@channel)
  %br
  %ul.videos
    - @channel.airings.each do |a|
      %li.video{:id => "video_#{a.video_id.to_s}"}
        .title= a.video.title
        .actions
          = link_to 'edit', edit_manage_channel_video_path(@channel, a.video)
          = link_to 'delete', ['manage', @channel, a.video], :method => :delete
:javascript
  $(".videos").sortable({items: ".video", axis: "y", cursor: "move", 
    update: function() {
      $.post("/channels/#{@channel.id}/videos/sort", "_method=put&"+ $(this).sortable("serialize"))
    }})