
#video-manage
  #viewer
  #main-content
    %ul#secondary-menu.clearfix
      %li= link_to 'videos', manage_channel_videos_path(@channel)
      %li= link_to 'add', new_manage_channel_video_path(@channel)
      %li= link_to 'settings', edit_manage_channel_path(@channel)
    = form_for ['manage', @channel, @video] do |f|
      .field
        %strong Add Videos
        = label_tag :links, 'Enter a comma separated list of links'
        %br
        = text_area_tag :links
      .actions
        = f.submit "Add to Channel"
        = link_to 'cancel', @channel
  