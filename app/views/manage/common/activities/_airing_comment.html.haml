%li.activity.comment.clearfix
  .secondary
    = link_to edit_manage_channel_video_path(activity.secondary_subject, activity.subject.commentable) do
      = image_tag(activity.subject.commentable.video.video_image_url(:thumb_list), class: "secondary", width: 48, height: 48)
  .primary
    = link_to slug_url(activity.actor.slug) do
      = image_tag(activity.actor.cover_art_url(:thumb_list), class: "primary", width: 48, height: 48)
  .body
    %i.commented
    = link_to "/#{activity.actor.slug}", slug_url(activity.actor.slug), class: "channel-link"
    %span.activity-action left a comment on
    = link_to activity.subject.commentable.title, edit_manage_channel_video_path(activity.secondary_subject, activity.subject.commentable)
    %p.comment= activity.subject.body
