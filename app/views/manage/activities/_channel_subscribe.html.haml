%li.activity.follow.clearfix
  .secondary
    = image_tag(activity.secondary_subject.cover_art_url(:thumb_list), width: 48, height: 48)
  .primary
    = link_to slug_url(activity.actor.slug) do
      = image_tag(activity.actor.cover_art_url(:thumb_list), class: "primary", width: 48, height: 48)
  %i.follow-white
  = link_to "/#{activity.actor.slug}", slug_url(activity.actor.slug)
  %span.activity-action followed your channel
