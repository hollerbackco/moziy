#channel-manage
  #main-content.channel-list.list
    #secondary-menu.clearfix
      .title Manage Channels
    %ul.channels
      - if current_user.facebook_channel?
        %li.channel.facebook-channel= link_to "My Facebook Channel", manage_channel_videos_path(current_user.facebook_channel)
        
      - index = 0
      - @channels.each do |c|
        - if c.has_airings?
          %li.channel
            %span.count= "+#{c.subscriptions.count}"
            = link_to "#{c.title}", manage_channel_videos_path(c), :class => "color#{index % 3}"
          - index += 1
  #viewer
    %iframe{:width => "100%", :height => "100%", :frameborder => 0, :src => chromeless_channel_path(@channels.first) }