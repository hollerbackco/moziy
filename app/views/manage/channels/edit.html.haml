.full-col
  = form_for ['manage', @channel] do |f|
    .field
      = f.label :title
      %br
      = f.text_field :title
    .actions
      = f.submit
      = link_to 'cancel', manage_channel_path(@channel)
      = link_to 'delete', manage_channel_path(@channel), :method => :delete, :confirm => "Are you sure?"