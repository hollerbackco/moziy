#channel-manage
  #main-content.channel-list.list
    %ul#secondary-menu.clearfix
      %li= link_to "# of watchers", root_path
      %li= link_to "tastemakers", root_path(:sort => "tastemakers")
      %li= link_to "my channels", root_path(:sort => "favorites")
    %ul.channels
      - if logged_in? and current_user.facebook_channel?
        %li.channel.facebook-channel= link_to "facebook channel", channels_path(current_user.facebook_channel)
      - index = 0
      - @channels.each do |c|
        - if c.has_airings?
          %li.channel.clearfix{:class => "color#{index % 2 }"}
            .coverart= link_to image_tag(c.cover_art_url(:thumb_list)), channel_path(c)
            .content
              .title
                = link_to "#{c.title}", channel_path(c)
                %span.user= c.creator.username if c.creator
              .description= c.description
              %span.count= "+#{c.subscriptions.count}"
              - if logged_in?
                - if current_user.owns?(c)
                  .star= link_to "edit", manage_channel_videos_path(c)
                - else
                  .star= link_to c.favorited?(current_user) ? "yes" : "no", subscribe_channel_path(c)
          - index += 1
  #viewer
    %iframe{:width => "100%", :height => "100%", :frameborder => 0, :src => chromeless_channel_path(@channels.first) }