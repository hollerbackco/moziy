<div id="currently-playing" class="clearfix">
  <div id="video-info">
    <div id="video-title" class="title">
      <div class="heading">now playing</div>
      {{title}}
    </div>
    <div class="meta">
      <div id="video-parent">
        <a class="channel-from">{{ channel.slug }}</a>
        {{#parent}}
          <i class="restream" />
          <a class="restream-from" href="{{url}}"> {{ title }} </a>
        {{/parent}}
      </div>
      <div id="video-notes">
        {{note_count}} attachments
      </div>
    </div>
  </div>
</div>
