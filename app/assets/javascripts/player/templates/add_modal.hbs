<div class="choose-add-type">
  <div class="modal-header">
    Add +
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <div class="modal-body modal-no-padding clearfix">
    <div class="add-menu-item add-airing">
      Add Video
    </div>
    <a class="add-menu-item add-channel" href="/manage/channels/new">Add Channel</a>
  </div>
</div>
<div class="add-airing-body">
  <div class="header">
    Add Video
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <form>
    <div class="modal-body">
        <fieldset>
          <label class="video-urls" for="video-urls">
            <input type="text" id="video-urls" name="video-urls" placeholder="Enter a youtube/vimeo video url" />
          </label>
        </fieldset>
        <fieldset>
          <label class="channels">
            <span>Which Channel?</span>
            <select id="channel-id" name="channel_id"></select>
          </label>
        </fieldset>
    </div>
    <div class="modal-footer">
      <div class="button primary" id="add-airing">add</div>
    </div>
  </form>
</div>
