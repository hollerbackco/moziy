<form action="/register" method="post">
  <div class="header modal-header">
    <div class="logo-moziy">moziy</div>
  </div>
  <div class="start modal-body">
    <div id="request-invite-errors" class="errors"></div>
    <fieldset class="textbox">
      <label class="email">
        <span>Email</span>
        <input type="text" name="[user]email" placeholder="email" />
      </label>
      <label class="password">
        <span>Password</span>
        <input type="password" name="[user]password" placeholder="password" />
      </label>
      <label class="username">
        <span>Username</span>
        <input type="text" name="[user]username" placeholder="username" />
      </label>
    </fieldset>
  </div>
  <div class="start modal-footer">
    <fieldset class="with-submit">
      <button type="submit" class="button primary action-button">Join</button>
    </fieldset>
  </div>
</form>
