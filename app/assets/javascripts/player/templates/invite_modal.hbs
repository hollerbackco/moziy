<form action="/invite" method="post">
  <div class="header modal-header">
    <div class="logo-moziy">moziy</div>
    <div class="tagline" style="margin-top: 10px">moziy is a fun new way to discover and share videos with your friends</div>
  </div>
  <div class="start modal-body">
    <div id="request-invite-errors" class="errors"></div>
    <fieldset class="textbox">
      <label class="email">
        <span>Email</span>
        <input type="text" name="email" placeholder="email" />
      </label>
    </fieldset>
  </div>
  <div class="start modal-footer">
    <fieldset class="with-submit">
      <button type="submit" class="button primary action-button">Request Invite</button>
    </fieldset>
  </div>
  <div class="success modal-body">
    <h1>We'll see you soon.</h1>
    <img src="/assets/thanks.gif" width=100% />
  </div>
</form>
